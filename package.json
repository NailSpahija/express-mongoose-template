{
  "name": "express-mongoose-template",
  "version": "1.0.0",
  "description": "express-mongoose-template",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "cross-env NODE_ENV=test mocha test/**/*.ts --exit",
    "test:debug": "cross-env NODE_ENV=test mocha --inspect-brk test/**/*.ts --exit",
    "test:junit": "cross-env NODE_ENV=test mocha test/**/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test/test-results.xml --exit",
    "lint": "tsc --noUnusedLocals --noEmit && prettier -c \"{server,test}/**/*.{ts,tsx}\" --write"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^3.6.7",
    "mongoose": "^5.8.11",
    "mongoose-sequence": "^5.2.2",
    "morgan": "^1.9.1",
    "pino": "^5.16.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/chai": "^4.2.8",
    "@types/express": "^4.17.1",
    "@types/mocha": "^7.0.1",
    "@types/mongoose": "^5.7.0",
    "@types/morgan": "^1.7.37",
    "@types/pino": "^5.15.4",
    "chai": "^4.2.0",
    "cross-env": "^7.0.0",
    "mocha": "^7.0.1",
    "mocha-junit-reporter": "^1.23.3",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.5.0",
    "prettier": "1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  }
}
